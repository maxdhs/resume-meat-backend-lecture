// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

enum ProjectName {
  milkman
  spammer
  wikipedia
  hungryPets
}

model Summary {
  id          String      @id @default(uuid())
  text        String      @unique
  projectName ProjectName
}

model User {
  id       String @id @default(uuid())
  username String @unique
  password String
}
